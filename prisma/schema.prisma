generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  password   String
  firstName  String  @map("first_name")
  lastName   String  @map("last_name")
  patronymic String?

  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  boards        Boards[]
  createdTasks  Tasks[]         @relation("createdTasks")
  assigneeTasks Tasks[]         @relation("assigneeTasks")
  userBoards    userBoards[]
  refreshTokens refreshTokens[]

  @@map("users")
}

model Boards {
  id          Int     @id @default(autoincrement())
  name        String
  description String?

  creator   Users @relation(fields: [creatorId], onDelete: Cascade, references: [id])
  creatorId Int   @map("creator_id")

  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  columns    Columns[]
  userBoards userBoards[]

  @@map("boards")
}

model Columns {
  id       Int    @id @default(autoincrement())
  name     String
  position Int    @default(0)

  board   Boards @relation(fields: [boardId], onDelete: Cascade, references: [id])
  boardId Int    @map("board_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  tasks     Tasks[]

  @@map("columns")
}

model Tasks {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  isCompleted Boolean  @default(false) @map("is_completed")
  position    Int      @default(0)
  deadline    DateTime

  creator   Users @relation("createdTasks", fields: [creatorId], onDelete: Cascade, references: [id])
  creatorId Int   @map("creator_id")

  assignee   Users? @relation("assigneeTasks", fields: [assigneeId], onDelete: SetNull, references: [id])
  assigneeId Int?   @map("assignee_id")

  column   Columns @relation(fields: [columnId], onDelete: Cascade, references: [id])
  columnId Int     @map("column_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tasks")
}

model userBoards {
  user   Users @relation(fields: [userId], onDelete: Cascade, references: [id])
  userId Int   @map("user_id")

  board   Boards @relation(fields: [boardId], onDelete: Cascade, references: [id])
  boardId Int    @map("board_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@id([userId, boardId])
  @@map("user_board")
}

model refreshTokens {
  id     Int    @id @default(autoincrement())
  token  String
  user   Users  @relation(fields: [userId], onDelete: Cascade, references: [id])
  userId Int    @map("user_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user_token")
}
